{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "mocha", "webdriverio"]
  },
  "include": ["helpers/**/*.ts", "pages/**/*.ts", "step-definitions/specs/**/*.ts", "features/**/*.ts", "scripts/**/*.ts", "wdio.conf.ts"],
  "exclude": ["node_modules", "dist"]
}
